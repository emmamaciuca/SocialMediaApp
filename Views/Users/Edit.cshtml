@model SocialMediaApp.Models.ApplicationUser



<form asp-controller="Users" asp-action="Edit" method="post" asp-route-id="@Model.Id" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <i class="bi bi-person"></i>

    <label asp-for="FirstName">Prenume</label>
    <br />
    <input asp-for="FirstName" class="form-control" />
    <br />
    <br /><span asp-validation-for="FirstName" class="text-danger"></span>
    <br />

    <i class="bi bi-person"></i>
    <label asp-for="LastName">Nume</label>
    <br />
    <input asp-for="LastName" class="form-control" />
    <br />
    <br /><span asp-validation-for="LastName" class="text-danger"></span>
    <br />


    <i class="bi-info-circle"></i> 
    <label asp-for="Content">Descriere</label>
    <br />
    <input asp-for="Content" class="form-control" />
    <br />
    <br /><span asp-validation-for="Content" class="text-danger"></span>
    <br />


    @* Poza de profil *@
    <div class="img-fluid rounded-circle">
        <label asp-for="Image">Poza de profil</label>
        <input asp-for="Image" class="form-control" type="file"/>
        @* <span asp-validation-for="Image" class="text-danger"></span> *@
    </div>


    <i class="bi bi-person"></i>
    <label asp-for="UserName">Nume utilizator</label>
    <br />
    <input asp-for="UserName" class="form-control" />
    <br />

    <i class="bi bi-envelope"></i>
    <label asp-for="Email">Email utilizator</label>
    <br />
    <input asp-for="Email" class="form-control" />
    <br />

    <i class="bi bi-phone"></i>
    <label asp-for="PhoneNumber">Numar telefon</label>
    <br />
    <input asp-for="PhoneNumber" class="form-control" />
    <br />

    @* Vizibilitate *@
    <i class="bi bi-eye"></i>
    <label asp-for="Visibility">Vizibilitate profil</label>
    <br />
    <select asp-for="Visibility" class="form-control">
        <option value="Public">Public</option>
        <option value="Private">Private</option>
    </select>
    <span asp-validation-for="Visibility" class="text-danger"></span>
    <br />

    <button type="submit" class="btn btn-sm btn-success">Editare user</button>

</form>




