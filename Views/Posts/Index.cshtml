<div class="container">
    @* <h2 class="text-center mb-4">Afisare postari</h2> *@
    <br />
    <br />

    @if (ViewBag.Message != null)
    {
        <div class="alert-success p-3 rounded-3 text-center mb-5 @ViewBag.Alert">
            @ViewBag.Message
        </div>
    }

    @if (ViewBag.Posts != null)
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var post in ViewBag.Posts)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="media-container">
                            @if (!string.IsNullOrEmpty(post.Image))
                            {
                                <div class="image-wrapper">
                                    <img src="@post.Image" alt="Poza postare" class="card-img-top">
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(post.Video))
                            {
                                <div class="video-wrapper">
                                    <iframe src="@post.Video.Replace("watch?v=", "embed/")"
                                            frameborder="0"
                                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                            allowfullscreen>
                                    </iframe>
                                </div>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <p class="card-text flex-grow-1">@post.Content</p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div class="user-info text-muted">
                                    <i class="bi bi-person-circle"></i>
                                    <span class="ms-2">@post.User.UserName</span>
                                </div>
                                <div class="text-muted small">
                                    <div>@post.Date.ToString("dd MMM yyyy")</div>
                                    <div>@post.Date.ToString("HH:mm")</div>
                                </div>
                            </div>

                            <a class="btn btn-outline-success w-100 mt-3"
                               asp-controller="Posts"
                               asp-action="Show"
                               asp-route-id="@post.Id">
                                <i class="bi bi-eye me-2"></i>Vezi postarea
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>



<style>

    .card {
        transition: transform 0.2s;
        min-height: 500px; /* Increased card height */
        background-color: #ffffff;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .media-container {
        position: relative;
        width: 100%;
        height: 250px; /* Fixed height for media container */
        background-color: #ffffff;
        padding: 15px; /* Added padding */
    }

    .image-wrapper {
        position: absolute;
        top: 15px; /* Added top spacing */
        left: 15px;
        right: 15px;
        bottom: 15px;
    }

        .image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            object-position: center;
        }

    .video-wrapper {
        position: absolute;
        top: 15px;
        left: 15px;
        right: 15px;
        bottom: 15px;
    }

        .video-wrapper iframe {
            width: 100%;
            height: 100%;
        }

    .badge {
        font-weight: 500;
    }

    .user-info {
        font-size: 0.9rem;
    }

    .card-body {
        background-color: #ffffff;
    }
</style>