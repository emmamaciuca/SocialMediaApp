<div class="container py-4">
    @* <h2 class="text-center mb-4">
        <i class="bi bi-plus-circle me-2"></i>Adaugare postare
    </h2> *@

    <br />
    <br />

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form method="post" asp-action="New" asp-controller="Posts" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger mb-4"></div>

                        <!-- Image Upload -->
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-image me-2"></i>Imagine
                            </label>
                            <input asp-for="ImageFile" type="file"
                                   class="form-control"
                                   accept="image/*" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <!-- Video URL -->
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-camera-video me-2"></i>URL Video
                            </label>
                            <input type="url"
                                   class="form-control"
                                   id="Video"
                                   name="Video"
                                   value="@Model.Video"
                                   placeholder="Introdu URL-ul videoclipului">
                        </div>

                        <!-- Content -->
                        <div class="mb-4">
                            <label asp-for="Content" class="form-label">
                                <i class="bi bi-textarea-t me-2"></i>Continut Postare
                            </label>
                            <textarea asp-for="Content"
                                      class="form-control summernote"
                                      rows="5"
                                      placeholder="Scrieti continutul postarii aici..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button class="btn btn-success" type="submit">
                                <i class="bi bi-plus-circle me-2"></i>Adauga postare
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.25);
    }
</style>