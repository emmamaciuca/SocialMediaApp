@model SocialMediaApp.Models.Post

<h2 class="text-center mt-5">Editare postare</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            <form method="post" asp-action="Edit" asp-controller="Posts" asp-route-id="@Model.Id" enctype="multipart/form-data">
                <!--
                    Metoda 2 prin care se trimite id-ul catre Controller
                <input type="hidden" asp-for="Id" />  -->

                <div asp-validation-summary="All" class="text-danger"></div>

                @* video sau imagine *@
                <div class="img-fluid">
                    <label asp-for="Image">Poza postare</label>
                    <input asp-for="Image" class="form-control" type="file" />
                    @* <span asp-validation-for="Image" class="text-danger"></span> *@
                </div>
                <div class="form-group">
                    <label for="Video">URL Video</label>
                    <input type="url" class="form-control" id="Video" name="Video" value="@Model.Video" placeholder="Introdu URL-ul videoclipului">
                </div>

             
                <div class="form-group">
                    <label asp-for="Content" class="form-label">Continut Postare</label>
                    <br />
                    <textarea asp-for="Content" class="form-control summernote"></textarea>

                    <span asp-validation-for="Content" class="text-danger"></span>

                    <br /><br />
                </div>

               

                <button class="btn btn-sm btn-success" type="submit">Modifica postare</button>

            </form>
        </div>
    </div>
</div>