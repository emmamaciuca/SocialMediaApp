@model SocialMediaApp.Models.Post

<h2 class="text-center mt-5">Editare postare</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            <form method="post" asp-action="Edit" asp-controller="Posts" asp-route-id="@Model.Id">
                <!--
                    Metoda 2 prin care se trimite id-ul catre Controller
                <input type="hidden" asp-for="Id" />  -->

                <div asp-validation-summary="All" class="text-danger"></div>
             

                <div class="form-group">
                    <label asp-for="Content" class="form-label">Continut Postare</label>
                    <br />
                    <textarea asp-for="Content" class="form-control summernote"></textarea>

                    <span asp-validation-for="Content" class="text-danger"></span>

                    <br /><br />
                </div>

               

                <button class="btn btn-sm btn-success" type="submit">Modifica postare</button>

            </form>
        </div>
    </div>
</div>